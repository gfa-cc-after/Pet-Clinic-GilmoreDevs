{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": ["**/node_modules/**", "**/dist/**", "**/coverage/**"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true
    },
    "ignore": [
      "src/components/ui/**",
      "src/hooks/**",
      "**/node_modules/**",
      "**/dist/**",
      "**/coverage/**",
      "tsconfig.*.json",
      "*.config.ts",
      "*.config.js"
    ]
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space",
    "enabled": true,
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/coverage/**",
      "tsconfig.*.json"
    ]
  },
  "overrides": [
    {
      "include": ["*.test.tsx"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    },
    {
      "include": ["*.test.tsx"],
      "linter": {
        "rules": {
          "style": {
            "noNamespaceImport": "off"
          }
        }
      }
    }
  ]
}
